<table class="table">
  <thead>
    <tr>
      <th>Account</th>
      <th>Transaction</th>
      <th>Amount</th>
      <th>Category</th>
      <th>Transaction Type</th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.account.name %></td>
        <td><%= entry.name %></td>
        <td><%= entry.amount %></td>
        <td><%= entry.category.name %></td>
        <td><%= entry.transaction_type.name %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>

<h2>Import Transactions</h2>

<%= form_tag import_entries_path, multipart: true do %>
  <%= collection_select :account, :id, Account.order(:name), :id, :name %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
