<%= form_for @transaction do |form| %>
  <% if @transaction.errors.any? %>
    <% @transaction.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
  <% end %>
    <%= form.label :name %>
    <%= form.text_field :name %><br>
    <%= form.label :amount %>
    <%= form.number_field :amount %><br>
    <%= form.label :date %>
    <%= form.date_field :date %><br>
    <%= form.label :category %>
    <%= form.collection_select :category_id, Category.order(:name), :id, :name %><br>
    <%= form.label :account %>
    <%= form.collection_select :account_id, Account.order(:name), :id, :name %><br>
    <%= form.label :type %>
    <%= form.collection_select :transaction_type_id, TransactionType.order(:name), :id, :name %><br>
    <%= form.submit %>
<% end %>
